---
interface Props {
  id: string
  class?: string
  title: string
  description: string
}

const { class: className, id, title, description } = Astro.props
---

<section
  id={id}
  data-section={id}
  class={`section ${className} scroll-m-20 container my-15 w-full py-4 md:max-w-[1200px] mx-auto`}
>
  <div class="flex flex-col justify-center items-center pb-15">
    <h2 class="text-4xl font-bold tracking-tight text-text sm:text-5xl text-center max-w-2xl mb-4">
      {title}
    </h2>
    <p class="text-lg text-center text-text-secondary max-w-md tracking-tight">{description}</p>
  </div>
  <slot />
</section>
